<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>

      {{  title || 'Portfolio generateur ' }}
    </title>
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=instrument-sans:400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />
    @vite(['resources/css/app.css', 'resources/js/app.js'])
  </head>
<body class="min-h-screen w-screen font-sans bg-zinc-50 ">
<header class="shadow-md font-sans tracking-wide relative z-50">
  <div class="grid grid-cols-3 items-center gap-4 px-10 py-4 bg-white min-h-[70px]">

    <!-- Section pour les liens de navigation -->
    <div class="flex items-center justify-start space-x-6">
      @if(!user)
      <ul class="hidden lg:flex gap-x-5">
        <li>
          <a href="javascript:void(0)" class="hover:text-[#007bff] text-gray-600  font-bold text-[15px]">Home</a>
        </li>
        <li>
          <a href="javascript:void(0)" class="hover:text-[#007bff] text-gray-600 font-bold text-[15px]">Intégration</a>
        </li>
        <li>
          <a href="javascript:void(0)" class="hover:text-[#007bff] text-gray-600 font-bold text-[15px]">UI</a>
        </li>
      </ul>
      @else
         <svg width="30" height="32" viewBox="0 0 21 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M13.9998 21V17C14.1389 15.7473 13.7797 14.4901 12.9998 13.5C15.9998 13.5 18.9998 11.5 18.9998 8C19.0798 6.75 18.7298 5.52 17.9998 4.5C18.2798 3.35 18.2798 2.15 17.9998 1C17.9998 1 16.9998 1 14.9998 2.5C12.3598 2 9.63979 2 6.99979 2.5C4.99979 1 3.99979 1 3.99979 1C3.69979 2.15 3.69979 3.35 3.99979 4.5C3.27167 5.51588 2.91827 6.75279 2.99979 8C2.99979 11.5 5.99979 13.5 8.99979 13.5C8.60979 13.99 8.31979 14.55 8.14979 15.15C7.97979 15.75 7.92979 16.38 7.99979 17M7.99979 17V21M7.99979 17C3.48979 19 3 15 1 15"
                  stroke="#09090B"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
      @endif
    </div>

    <!-- Logo centré -->
    <div class="flex justify-center">
    @if(!user)
      <a href="/" class="text-4xl">
        <svg width="30" height="32" viewBox="0 0 21 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M13.9998 21V17C14.1389 15.7473 13.7797 14.4901 12.9998 13.5C15.9998 13.5 18.9998 11.5 18.9998 8C19.0798 6.75 18.7298 5.52 17.9998 4.5C18.2798 3.35 18.2798 2.15 17.9998 1C17.9998 1 16.9998 1 14.9998 2.5C12.3598 2 9.63979 2 6.99979 2.5C4.99979 1 3.99979 1 3.99979 1C3.69979 2.15 3.69979 3.35 3.99979 4.5C3.27167 5.51588 2.91827 6.75279 2.99979 8C2.99979 11.5 5.99979 13.5 8.99979 13.5C8.60979 13.99 8.31979 14.55 8.14979 15.15C7.97979 15.75 7.92979 16.38 7.99979 17M7.99979 17V21M7.99979 17C3.48979 19 3 15 1 15"
            stroke="#09090B"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
         @endif
    </div>

    <!-- Section de droite pour le bouton de connexion ou profil -->
    <div class="flex justify-end items-center space-x-4">
      @if(user)
        <!-- Affichage de l'image de profil si connecté -->
                <a href="/dashbord" class="hover:text-[#007bff] text-gray-600 ">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
        </a>
        <a href="/dashbord" class="hover:text-[#007bff] text-gray-600 ">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-layout-dashboard"><rect width="7" height="9" x="3" y="3" rx="1"/><rect width="7" height="5" x="14" y="3" rx="1"/><rect width="7" height="9" x="14" y="12" rx="1"/><rect width="7" height="5" x="3" y="16" rx="1"/></svg>
</a>

        <img src="{{ user.avatarUrl || "https://api.dicebear.com/9.x/initials/svg?seed=" + user.fullName  }}" alt="User Profile" class="w-10 h-10 rounded-full" width="1000" height="1000">
      @else
        <!-- Bouton de connexion si pas connecté -->
        <a href="/github/redirect" class="bg-[#007bff] text-white px-4 py-2 rounded-lg">
          Connexion
        </a>
      @endif

      <!-- Bouton pour ouvrir le menu sur mobile -->
      <button id="toggleOpen" class="lg:hidden">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round" class="feather feather-menu">
          <path d="M3 12h18M3 6h18M3 18h18"></path>
        </svg>
      </button>
    </div>

  </div>

  <!-- Menu mobile caché par défaut -->
  <div id="collapseMenu" class="hidden lg:hidden bg-white shadow-md">
    <ul class="flex flex-col space-y-4 p-4">
      <li>
        <a href="javascript:void(0)" class="hover:text-[#007bff] text-[#007bff] font-bold text-[15px]">Home</a>
      </li>
      <li>
        <a href="javascript:void(0)" class="hover:text-[#007bff] text-gray-400 font-bold text-[15px]">Intégration</a>
      </li>
      <li>
        <a href="javascript:void(0)" class="hover:text-[#007bff] text-gray-400 font-bold text-[15px]">UI</a>
      </li>
      <li>
        <a href="/github/redirect" class="hover:text-[#007bff] text-[#007bff] font-bold text-[15px]">Connexion</a>
      </li>
    </ul>
  </div>
</header>
